<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation"novalidate>
        
      <div class="mb-3">
        <label class="username" class="form-control">Username</label>
        <input name="username" id="username" type="text" class="form-control" required>
        <div class="valid-feedback">
      Looks good!
    </div>
<div class="mb-3">
        <label class="email" class="form-control">Email</label>
        <input name="email" id="email" type="email" class="form-control" required>
    </div>
    <div class="mb-3">
        <label class="password" class="form-control">Password</label>
        <input name="password" id="password" type="password" class="form-control" required>
       
    </div>
    <button class="btn btn-success">SignUp</button>
    </form>
    </div>
    </div>